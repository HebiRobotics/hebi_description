<?xml version="1.0"?>

<!-- HEBI A-2085-06 6-DoF Robot Arm Kit -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="A-2085-06">

  <xacro:include filename="$(find hebi_description)/urdf/hebi.xacro"/>

  <!-- world -->
  <link name="world" />
  <joint name="world_joint"  type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="world"/>
    <child link="Arm/J1_base/INPUT_INTERFACE"/>
  </joint>

  <!-- robot -->
  <xacro:actuator name="Arm/J1_base" child="shoulder_bracket" type="X8_9" limits="${[-pi,pi]}"/>
  <xacro:bracket name="shoulder_bracket" child="Arm/J2_shoulder" type="X5HeavyRightOutside"/>
  <xacro:actuator name="Arm/J2_shoulder" child="shoulder_elbow" type="X8_16" limits="${[-0.5,pi]}"/>
  <xacro:link name="shoulder_elbow" child="Arm/J3_elbow" extension="0.325" twist="${pi}"/>
  <xacro:actuator name="Arm/J3_elbow" child="elbow_wrist1" type="X8_9" limits="${[-3,3]}"/>
  <xacro:link name="elbow_wrist1" child="Arm/J4_wrist1" extension="0.325" twist="${pi}"/>
  <xacro:actuator name="Arm/J4_wrist1" child="wrist1_wrist2" type="X5_1" limits="${[-2 * pi, 2 * pi]}"/>
  <xacro:bracket name="wrist1_wrist2" child="Arm/J5_wrist2" type="X5LightRight"/>
  <xacro:actuator name="Arm/J5_wrist2" child="wrist2_wrist3" type="X5_1" limits="${[-1.5 * pi, 1.5 * pi]}"/>
  <xacro:bracket name="wrist2_wrist3" child="Arm/J6_wrist3" type="X5LightRight"/>
  <xacro:actuator name="Arm/J6_wrist3" child="end_effector" type="X5_1"/>

  <!-- parallel gripper end effector -->
  <xacro:gripper name="end_effector" type="parallel"/>

</robot>
